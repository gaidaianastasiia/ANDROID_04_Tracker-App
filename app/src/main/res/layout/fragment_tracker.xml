<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.tracker.TrackerFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MapsActivity" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/trackInfoGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="speedLabelTextView, speedTextView, speedUnitTextView, distanceLabelTextView, distanceTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/speedLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/track_screen_speed_label"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/content_start"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@id/speedLabelTextView"
        app:layout_constraintStart_toEndOf="@id/speedLabelTextView"
        app:layout_constraintTop_toTopOf="@id/speedLabelTextView"
        tools:text="0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/speedUnitTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/track_screen_speed_unit"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/speedTextView"
        app:layout_constraintTop_toTopOf="@id/speedTextView" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/distanceLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/track_screen_distance_label"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/distanceTextView"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@id/distanceLabelTextView"
        app:layout_constraintEnd_toStartOf="@id/distanceUnitTextView"
        app:layout_constraintTop_toTopOf="@id/distanceLabelTextView"
        app:layout_goneMarginStart="15dp"
        tools:text="16" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/distanceUnitTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/track_screen_distance_unit"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/content_end"
        app:layout_constraintTop_toTopOf="@id/distanceTextView" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:text="@string/track_screen_start_btn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.65" />
</androidx.constraintlayout.widget.ConstraintLayout>